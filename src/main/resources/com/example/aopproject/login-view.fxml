<AnchorPane prefHeight="541.0" prefWidth="675.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aopproject.controller.LoginController">
   <children>
      <Label alignment="CENTER" layoutX="0.0" layoutY="70.0" prefWidth="600.0" styleClass="app-title" text="BONDHU" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0" />
