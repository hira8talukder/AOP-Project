<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aopproject.controller.MedicineDeliveryController">
   <children>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="375.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="375.0" AnchorPane.rightAnchor="375.0">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="0.0" layoutY="70.0" prefWidth="800.0" styleClass="app-title" text="BONDHU" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0" />
      <VBox alignment="CENTER" layoutX="275.0" layoutY="120.0" prefHeight="450.0" prefWidth="400.0" spacing="20.0" styleClass="card-style" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="120.0">
         <children>
            <Label styleClass="h1-label" text="Medicine Delivery Service" />
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label styleClass="form-label" text="Medicine Name:" />
                  <TextField fx:id="medicineNameField" promptText="e.g., Paracetamol" styleClass="form-field" GridPane.columnIndex="1" />
                  <Label styleClass="form-label" text="Quantity:" GridPane.rowIndex="1" />
                  <TextField fx:id="quantityField" promptText="e.g., 2 strips" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label styleClass="form-label" text="Delivery Address:" GridPane.rowIndex="2" />
                  <TextArea fx:id="deliveryAddressArea" promptText="Your full delivery address" prefRowCount="3" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button onAction="#handlePlaceOrderButtonAction" styleClass="primary-button" text="Place Order" />
                  <Button onAction="#handleBackToHomeButtonAction" styleClass="secondary-button" text="Back to Home" />
               </children>
            </HBox>
            <Label fx:id="statusMessageLabel" styleClass="status-message" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <Label alignment="CENTER" layoutX="0.0" layoutY="575.0" prefWidth="800.0" styleClass="copyright-label" text="All rights reserved by HIRA TAlUKDER" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
   </children>
</AnchorPane>